<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.wpl.TransportController" spacing="10" style="-fx-padding: 20;">
    <Label text="Vehicle Information" style="-fx-font-size: 24; -fx-font-weight: bold;" />
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <TextField fx:id="numberPlateField" promptText="Number Plate" />
        <TextField fx:id="rentedByField" promptText="Rented By" /> <!-- Changed from modelNumberField -->
        <Button fx:id="addButton" text="Add" onAction="#handleAddVehicle" />
    </HBox>
    <TableView fx:id="vehicleTable" VBox.vgrow="ALWAYS">
        <columns>
            <!-- Increase width of Number Plate column -->
            <TableColumn fx:id="numberPlateColumn" text="Number Plate" prefWidth="150" />
            <TableColumn fx:id="rentedByColumn" text="Rented By" /> <!-- Changed from modelNumberColumn -->
            <TableColumn fx:id="cargoIDColumn" text="Cargo ID" />
        </columns>
    </TableView>
</VBox>
