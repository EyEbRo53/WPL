<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.wpl.AdminTransportCompany"
      spacing="10" style="-fx-padding: 20;">
    <Label text="Transport Company Information" style="-fx-font-size: 24; -fx-font-weight: bold;" />
    <ScrollPane fitToWidth="true" vbarPolicy="ALWAYS">
        <VBox spacing="10">
            <TableView fx:id="companyTable">
                <columns>
                    <TableColumn fx:id="companyIdColumn" text="Company ID" prefWidth="100" />
                    <TableColumn fx:id="companyNameColumn" text="Company Name" prefWidth="200" />
                    <TableColumn fx:id="contactNumberColumn" text="Contact Number" prefWidth="150" />
                </columns>
            </TableView>
        </VBox>
    </ScrollPane>

    <!-- Add Company Form without Company ID field -->
    <HBox spacing="10">
        <TextField fx:id="companyNameField" promptText="Company Name" />
        <TextField fx:id="contactNumberField" promptText="Contact Number" />
        <Button fx:id="addButton" text="Add Company" onAction="#handleAddCompany" />
    </HBox>
</VBox>
